doctype html

html
    head
        title Ovladaci centrum pro debriefing
        block head

        block styles
        link(rel='stylesheet', href='/ultragrid/style.css')

        block scripts

        script(src='/bower_components/jquery/dist/jquery.min.js', type='text/javascript')
        script(src='/js/lib/ws/ws.js')
        script(src='/js/lib/main.js', type='text/javascript')
        script(src='/js/lib/show.js', type='text/javascript')
        script(src='/js/lib/generate.js', type='text/javascript')
        script(src='/js/lib/terminal.js', type='text/javascript')
        script(src='/ultragrid/Timer.js', type='text/javascript')


    body
        block content

        h1 Ovladací centrum debriefingového systému

        table
            tr
                td
                    button#Start_video
                td  Spustí přenos obrazu a zvuku ze simulační místnosti
            tr
                td
                    button#Start_recording
                td  Spustí zaznamenávání přenosu
            tr
                td 
                   span.timer
                td Časomíra pro nahrávání
            tr
                td
                    button#Stop_recording
                td  Zastaví přenos i nahrávání, zpracuje video a přehraje jej
        hr

        table
            tr
                td
                    button#File_manager
                td  Otevře prohlížeč záznamů
            tr
                td
                    button#Shutdown
                td  Vypnutí celého systému


    script(src='/ultragrid/main.js', type='text/javascript')

    script.

